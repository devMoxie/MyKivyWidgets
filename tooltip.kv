<ToolTip>:
    label: label
    cols: 1
    size_hint: (None, None)

    Label:
        id: label
        text: root.text
        font_size: '14sp'
        padding_x: dp(10)
        padding_y: 0 if self.height < dp(30) else dp(10)
        size_hint: (None, None)
        width: self.texture_size[0] if self.texture_size[0] < dp(300) else (dp(300))
        height: dp(30) if self.texture_size[0] < dp(300) else self.texture_size[1]
        text_size: (self.width, None) if self.texture_size[0] >= dp(300) else (None, None)      
